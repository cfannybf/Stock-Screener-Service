        <Label x:Name="label1" Content="Results" HorizontalAlignment="Left" Margin="187,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Label3" Content="Percentage" HorizontalAlignment="Left" Margin="10,284,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="percentageTextBox" HorizontalAlignment="Left" Height="23" Margin="10,315,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" Width="54"/>
        <Button x:Name="button" Content="Search" HorizontalAlignment="Left" Margin="69,318,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <DataGrid x:Name="companyDataGrid" HorizontalAlignment="Left" Margin="181,41,0,0" VerticalAlignment="Top" Height="238" Width="465"/>

    </Grid>
</Window>
