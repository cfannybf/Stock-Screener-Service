        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenerGui"
        mc:Ignorable="d"
        Title="Stock Screener" Height="391.005" Width="665.585">
    <Grid Margin="0,0,2,-1">
        <ListView x:Name="symbolsListView" HorizontalAlignment="Left" Height="238" Margin="10,41,0,0" VerticalAlignment="Top" Width="166">
